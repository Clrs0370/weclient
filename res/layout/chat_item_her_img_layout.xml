<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/chat_item_layout_time"
        android:layout_width="fill_parent"
        android:layout_marginBottom="0dip"
        android:layout_marginTop="15dip"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chat_item_text_time"
            android:background="@drawable/chat_time_layout_bg"
            android:paddingTop="6dip"
            android:paddingBottom="6dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="12.13"
            android:textColor="@color/chat_item_time_text_color"
            android:textSize="12dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="0dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="40dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="5dip">

            <ImageView
                android:id="@+id/chat_item_her_img_img_profile"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginTop="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/profile_head_default" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


           <RelativeLayout
                android:id="@+id/chat_item_her_img_layout_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:paddingLeft="15dip"
                android:paddingRight="6dip"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:background="@drawable/chat_her_content_bg">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3px">


                    <ImageView
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        android:background="@drawable/pic_default"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/chat_item_her_img_img_content"
                        android:layout_width="200dip"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:minHeight="150dip"
                        android:maxHeight="250dip"
                        android:scaleType="centerCrop"
                         />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
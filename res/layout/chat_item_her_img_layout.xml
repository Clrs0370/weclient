<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="15dip"
		android:layout_marginRight="5dip"
		android:layout_marginTop="18dip"
		android:orientation="horizontal" >
		<RelativeLayout
			android:layout_width="60dip"
			android:layout_height="fill_parent"
			android:layout_marginRight="10dip" >
			<ImageView
				android:id="@+id/chat_item_her_img_img_profile"
				android:layout_width="60dip"
				android:layout_height="60dip"
				android:layout_marginTop="10dip"
				android:background="#000000"
				android:src="@drawable/head_default" />
		</RelativeLayout>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" >
			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="25dip" >
				<TextView
					android:id="@+id/chat_item_her_img_text_profile"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentLeft="true"
					android:textColor="#196fab"
					android:textSize="18dip" />
				<TextView
					android:id="@+id/chat_item_her_img_text_time"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:textColor="#494949"
					android:textSize="12dip" />
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="10dip"
				android:layout_marginRight="50dip"
				android:layout_marginTop="15dip"
				android:background="#96988e"
				android:padding="1px" >
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="#ffffff"
					android:padding="3px" >
					<ImageView
						android:id="@+id/chat_item_her_img_img_content"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:adjustViewBounds="true"
						android:maxHeight="250dip"
						android:scaleType="centerCrop"
						android:src="@drawable/img_loading" />
				</RelativeLayout>
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
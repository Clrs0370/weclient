<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/actionbar_main_layout_main"
	android:layout_width="match_parent"
	android:layout_height="45dip"
	android:background="#1a6294" >
	<RelativeLayout
		android:layout_width="150dip"
		android:layout_height="fill_parent" >
		<ImageView
			android:id="@+id/actionbar_img_show_menu"
			android:layout_width="45dip"
			android:layout_height="40dip"
			android:layout_centerVertical="true"
			android:paddingBottom="10dip"
			android:paddingRight="30dip"
			android:paddingTop="10dip"
			android:src="@drawable/actionbar_left" />
		<RelativeLayout
			android:layout_width="100dip"
			android:layout_height="match_parent"
			android:layout_marginLeft="28dip" >
			<RelativeLayout
				android:id="@+id/actionbar_left_layout_second"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_marginLeft="5dip"
				android:visibility="gone" >
				<TextView
					android:id="@+id/actionbar_left_text_second"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="@string/mass"
					android:textColor="#ffffff"
					android:textSize="20dip" />
			</RelativeLayout>
			<RelativeLayout
				android:id="@+id/actionbar_left_layout_first"
				android:layout_marginTop="3dip"
				android:layout_marginBottom="3dip"
				android:layout_marginLeft="6dip"
				android:layout_marginRight="6dip"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/drop_down_indecator_bg" >
				<TextView
					android:id="@+id/actionbar_left_text_first"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:text="@string/message"
					android:textColor="#ffffff"
					android:textSize="20dip" />
			</RelativeLayout>
		</RelativeLayout>
	</RelativeLayout>
	<LinearLayout
		android:id="@+id/actionbar_main_layout_right"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginRight="20dip"
		android:layout_marginTop="5dip"
		android:orientation="vertical" >
		<LinearLayout
			android:layout_width="80dip"
			android:layout_height="38dip"
			android:orientation="horizontal" >
			<RelativeLayout
				android:id="@+id/actionbar_main_layout_first"
				android:layout_width="38dip"
				android:layout_height="38dip"
				android:layout_marginLeft="3dip" >
				<ImageView
					android:id="@+id/actionbar_main_img_first"
					android:layout_width="35dip"
					android:layout_height="35dip"
					android:layout_centerHorizontal="true"
					android:paddingBottom="6dip"
					android:paddingLeft="6dip"
					android:paddingRight="6dip"
					android:paddingTop="6dip"
					android:src="@drawable/action_message_button_bg" />
			</RelativeLayout>
			<LinearLayout
				android:layout_width="1dip"
				android:layout_height="fill_parent"
				android:layout_marginBottom="3dip"
				android:layout_marginTop="5dip"
				android:background="#0d4a74" >
			</LinearLayout>
			<RelativeLayout
				android:id="@+id/actionbar_main_layout_second"
				android:layout_width="38dip"
				android:layout_height="38dip"
				android:layout_marginLeft="3dip" >
				<ImageView
					android:id="@+id/actionbar_main_img_second"
					android:layout_width="35dip"
					android:layout_height="35dip"
					android:layout_centerHorizontal="true"
					android:paddingBottom="7dip"
					android:paddingLeft="7dip"
					android:paddingRight="7dip"
					android:paddingTop="7dip"
					android:src="@drawable/action_mass_button_bg" />
			</RelativeLayout>
		</LinearLayout>
		<LinearLayout
			android:layout_width="80dip"
			android:layout_height="1dip"
			android:layout_marginTop="1dip"
			android:orientation="horizontal" >
			<ScrollView
				android:id="@+id/actionbar_main_scroll_index"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				 >
				<LinearLayout
					android:layout_width="140dip"
					android:layout_height="1dip" >
					<LinearLayout
						android:id="@+id/actionbar_main_layout_index"
						android:layout_width="35dip"
						android:layout_height="1dip"
						android:layout_marginLeft="44dip"
						android:background="#ffffff" >
					</LinearLayout>
				</LinearLayout>
			</ScrollView>
		</LinearLayout>
	</LinearLayout>
</RelativeLayout>
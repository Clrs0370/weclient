<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbdbdb"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="55dip"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="18dip"
            android:layout_height="55dip">

            <ImageView
                android:id="@+id/fans_profile_img_profile"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerInParent="true"
                android:background="@drawable/profile_head_default" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="15dip"
            android:orientation="vertical"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/fans_profile_text_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:maxLength="15"
                    android:textSize="18dip"
                    android:textColor="@color/fans_profile_index_text_color"
                    android:text="..." />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/fans_profile_img_gender"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="18dip"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:background="@drawable/fans_gender_bg" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="10dip"
        android:layout_height="50dip">

        <TextView
            android:id="@+id/fans_profile_remark_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dip"
            android:textSize="16dip"
            android:textColor="@color/fans_profile_index_text_color"
            android:gravity="center_vertical"
            android:text="@string/remark_name" />


        <TextView
            android:id="@+id/fans_profile_text_remark_name"
            android:layout_toRightOf="@+id/fans_profile_remark_name"
            android:layout_marginLeft="40dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="14dip"
            android:textColor="@color/fans_profile_content_text_color"
            android:gravity="center_vertical"
            android:text="..." />

        <ImageView
            android:id="@+id/fans_profile_button_edit_remark"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:layout_centerVertical="true"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/remark_edit"
            android:padding="4dip"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#a3a3a3"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip">

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="45dip">

        <TextView
            android:layout_marginLeft="25dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/fans_profile_index_text_color"
            android:textSize="16dip"
            android:text="@string/area"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/fans_profile_text_country"
            android:layout_marginLeft="40dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/fans_profile_content_text_color"
            android:textSize="14dip"
            android:text="..."
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/fans_profile_text_city"
            android:layout_marginLeft="15dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/fans_profile_content_text_color"
            android:textSize="14dip"
            android:text="..."
            android:gravity="center_vertical" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#a3a3a3"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip">

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="45dip">

        <TextView
            android:id="@+id/fans_profile_signature"
            android:layout_marginLeft="25dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/fans_profile_index_text_color"
            android:textSize="16dip"
            android:text="@string/signature"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/fans_profile_text_signature"
            android:layout_toRightOf="@+id/fans_profile_signature"
            android:layout_marginLeft="40dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/fans_profile_content_text_color"
            android:textSize="14dip"
            android:maxLines="3"
            android:layout_marginRight="40dip"
            android:text="..."
            android:gravity="center_vertical" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#a3a3a3"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip">

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="45dip">

        <TextView
            android:id="@+id/fans_profile_group"
            android:layout_marginLeft="25dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/fans_profile_index_text_color"
            android:textSize="16dip"
            android:text="@string/group"
            android:gravity="center_vertical" />

        <TextView
            android:layout_toRightOf="@+id/fans_profile_group"
            android:id="@+id/fans_profile_text_group"
            android:layout_marginLeft="40dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="@color/fans_profile_content_text_color"
            android:textSize="14dip"
            android:text="..."
            android:gravity="center_vertical" />


        <ImageView
            android:id="@+id/fans_profile_button_edit_group"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:layout_centerVertical="true"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:src="@drawable/remark_edit"
            android:padding="4dip"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#a3a3a3"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip">

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="20dip"
        android:layout_height="40dip">

        <Button
            android:id="@+id/fans_profile_button_send_message"
            android:layout_width="250dip"
            android:layout_height="45dip"
            android:layout_centerInParent="true"
            android:text="@string/send_message"
            android:textColor="#ffffff"
            android:textSize="16dip"
            android:background="@drawable/ensure_button_sure_bg" />


    </RelativeLayout>


</LinearLayout>
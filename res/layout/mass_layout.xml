<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9">

    <LinearLayout
        android:id="@+id/mass_layout_mass"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/shape_radius_mass_header_bg"
            android:paddingTop="1px"
            android:paddingLeft="1px"
            android:paddingRight="1px"
            android:paddingBottom="0px"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="40dip">

            <RelativeLayout
                android:id="@+id/mass_layout_index_first"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:background="@drawable/mass_index_bg_left"
                android:clickable="true"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:background="@drawable/mass_index_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="@string/text"
                        android:textSize="12dip"
                        android:textColor="@color/mass_index_text_color" />

                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="1px"
                android:background="@color/mass_index_bg_border_color"
                android:layout_height="fill_parent">

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/mass_layout_index_second"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/mass_index_bg_middle"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:background="@drawable/mass_index_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="@string/img"
                        android:textSize="12dip"
                        android:textColor="@color/mass_index_text_color" />

                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="1px"
                android:background="@color/mass_index_bg_border_color"
                android:layout_height="fill_parent">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mass_layout_index_third"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/mass_index_bg_middle"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:background="@drawable/mass_index_voice" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="@string/voice"
                        android:textSize="12dip"
                        android:textColor="@color/mass_index_text_color" />

                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="1px"
                android:background="@color/mass_index_bg_border_color"
                android:layout_height="fill_parent">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mass_layout_index_forth"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/mass_index_bg_middle"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:background="@drawable/mass_index_app" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="@string/img_text"
                        android:textSize="12dip"
                        android:textColor="@color/mass_index_text_color" />

                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="1px"
                android:background="@color/mass_index_bg_border_color"
                android:layout_height="fill_parent">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mass_layout_index_fifth"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:clickable="true"
                android:background="@drawable/mass_index_bg_right"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:background="@drawable/mass_index_video" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="@string/video"
                        android:textSize="12dip"
                        android:textColor="@color/mass_index_text_color" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:background="@color/mass_index_bg_border_color"
            android:layout_height="1px">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mass_layout_content"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mass_voice_record_layout"
        android:layout_marginBottom="-200dip"
        android:background="#927349"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="200dip">

    </LinearLayout>

</RelativeLayout>
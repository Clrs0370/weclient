<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_radius_mass_bottom_bg"
            android:paddingBottom="10dip"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:paddingLeft="1px"
                android:paddingRight="1px"
                android:layout_height="180dip">

                <EditText
                    android:id="@+id/mass_text_edit_mass"
                    android:layout_width="fill_parent"
                    android:layout_height="180dip"
                    android:layout_marginBottom="8dip"
                    android:layout_marginLeft="0dip"
                    android:layout_marginRight="0dip"
                    android:layout_marginTop="0dip"
                    android:paddingLeft="8dip"
                    android:paddingRight="8dip"
                    android:paddingTop="8dip"
                    android:paddingBottom="8dip"
                    android:background="@color/mass_text_edit_color"
                    android:capitalize="sentences"
                    android:gravity="top|left"
                    android:imeOptions="actionDone"
                    android:isScrollContainer="true"
                    android:minLines="8"
                    android:singleLine="false"
                    android:textSize="13dip"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/mass_text_button_face_show"
                    android:layout_height="25dip"
                    android:layout_width="25dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="15dip"
                    android:background="@drawable/mass_button_show_face_bg" />

                <TextView
                    android:id="@+id/mass_text_text_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="0dip"
                    android:layout_marginRight="15dip"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:background="@drawable/shape_radius_gray_bg"
                    android:text="0 x" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/mass_text_layout_face"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_marginBottom="10dip"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dip">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginTop="16dip"
                        android:background="#dcdcdc">

                    </LinearLayout>

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:background="@drawable/mass_face_divider"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="15dip" />


                </RelativeLayout>


                <com.suan.weclient.view.Face.FaceGridView
                    android:id="@+id/mass_text_face_grid_view"
                    android:numColumns="8"
                    android:layout_width="fill_parent"
                    android:layout_height="150dip">

                </com.suan.weclient.view.Face.FaceGridView>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dip"
            android:layout_width="fill_parent"
            android:layout_height="100dip">

            <TextView
                android:id="@+id/mass_text_left_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9c584f"
                android:textSize="13dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_below="@+id/mass_text_left_num"
                android:text="@string/mass_declare"
                android:textColor="#9c584f"
                android:textSize="13dip" />

            <Button
                android:id="@+id/mass_button_send"
                android:layout_width="100dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dip"
                android:text="@string/send"
                android:textColor="#ffffff"
                android:background="@drawable/send_button_sure_bg" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
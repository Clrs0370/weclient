<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e9e9e9"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/message_item_bg_title"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/message_item_img_img_profile"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:background="#000000"
            android:src="@drawable/head_default" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_item_img_text_profile"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="8dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5e5e5e"
                android:text="Name"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/message_item_img_text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="8dip"
                android:text="12.31 14:50"
                android:textColor="#5e5e5e"
                android:textSize="12dip" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/message_item_bg_middle"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dip"
            android:layout_marginRight="75dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:background="#96988e"
            android:padding="1px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="3px">

                <ImageView
                    android:id="@+id/message_item_img_img_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxHeight="250dip"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pic_default" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/message_item_img_layout_long_click"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginRight="5dip"
        android:layout_marginLeft="5dip"
        android:orientation="horizontal"
        android:background="@drawable/message_item_bg_long_click">


        <RelativeLayout
            android:id="@+id/message_item_img_layout_download"
            android:clickable="true"
            android:background="@drawable/msg_click_layout_bg_middle"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/message_item_img_button_download"
                android:layout_width="25dip"
                android:layout_height="20dip"
                 android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/msg_download" />
        </RelativeLayout>


        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="1px"
            android:background="#cdcdcd"></LinearLayout>
        <RelativeLayout
            android:id="@+id/message_item_img_layout_share"
            android:clickable="true"
            android:background="@drawable/msg_click_layout_bg_middle"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/message_item_img_button_share"
                android:layout_width="25dip"
                android:layout_height="20dip"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/msg_share" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:orientation="horizontal"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginBottom="5dip"
        android:background="@drawable/message_item_bg_bottom">


        <RelativeLayout
            android:id="@+id/message_item_img_layout_star"
            android:clickable="true"
            android:background="@drawable/msg_click_layout_bg_left_bottom"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/message_item_img_button_star"
                android:layout_width="20dip"
                android:layout_height="20dip"

                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/msg_star_button_bg" />
        </RelativeLayout>

        <LinearLayout
            android:layout_height="fill_parent"
            android:layout_width="1px"
            android:background="#cdcdcd"></LinearLayout>

        <RelativeLayout
            android:id="@+id/message_item_img_layout_reply"
            android:clickable="true"
            android:background="@drawable/msg_click_layout_bg_right_bottom"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/message_item_img_button_reply"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/msg_reply" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
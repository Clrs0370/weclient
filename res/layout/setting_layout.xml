<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353535">

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:clickable="true"
            android:id="@+id/setting_layout_push"
            android:background="@drawable/setting_item_bg"
            android:layout_height="60dip"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/push_enable"
                android:textColor="#000000"
                android:textSize="15dip"
                android:layout_marginLeft="25dip"
                android:layout_centerVertical="true"
                android:id="@+id/setting_text_push" />

            <RelativeLayout
                android:id="@+id/setting_layout_checkbox"
                android:layout_height="20dip"
                android:layout_width="20dip"
                android:background="@drawable/setting_checkbox_button_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dip">

            </RelativeLayout>


            <include
                layout="@layout/setting_item_divider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>


        <RelativeLayout
            android:clickable="true"
            android:id="@+id/setting_layout_push_frequent"
            android:background="@drawable/setting_item_bg"
            android:layout_height="60dip"
            android:layout_width="fill_parent">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/push_frequent"
                android:textColor="#000000"
                android:textSize="15dip"
                android:layout_marginLeft="25dip"
                android:layout_centerVertical="true"
                />


            <TextView
                android:id="@+id/setting_text_push_frequent"
                android:textSize="15dip"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dip"

                />

            <include
                layout="@layout/setting_item_divider"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>